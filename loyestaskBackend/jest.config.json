{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.ts"],
  "testMatch": [
    "<rootDir>/src/tests/**/*.test.ts"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/tests/**/*.ts",
    "!src/index.ts",
    "!src/scripts/**/*.ts"
  ],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
